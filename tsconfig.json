{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"],
  "include": [
    "tasks/**/*.ts",
    "test/**/*.ts",
    "typechain/**/*.d.ts",
    "typechain/**/*.ts",
    "./scripts",
    "verify/**/*.js"
  ]
}
